<header>
      <div class="navbar">
        <div class="nav-left">
          <%= link_to 'ワインノミタイ', root_path, class: "nav" %></ul>
          <ul class="nav"><a href="#">ワ活</a></ul>
          <ul class="nav"><a href="#">ニュース</a></ul>
        </div>
        <div class="nav-right">
          <% if user_signed_in? %>
          <ul><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "log-out" %></ul>
          <ul class="notification"><%= link_to(image_tag("bell.png", alt: "通知", class: "notification"), "#") %></ul>
          
          <% else %>
          <ul><%= link_to '新規登録', new_user_registration_path, class: "sign-in" %></ul>
          <ul><%= link_to 'ログイン', new_user_session_path, class: "log-in" %></ul>
          <%  end %>
          
          
          <% if current_user %>
            <ul class="icon">
              <%= link_to(
                image_tag(current_user.avatar.attached? ? current_user.avatar : 'wa.png', class: "icon"),
                user_path(current_user)
              ) %>
            </ul>
          <% end %>
        </div>
      </div>
    </header>
