<h2>Edit</h2>

<%= form_with model: current_user, local: true do |f|%>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  
  <div class="field">
    <%= f.label :自己紹介 %><br />
    <%= f.text_area :introduction, autocomplete: "introduction" %>
  </div>
  
  <div class="field">
    <%= f.label :アイコン %><br />
    <%= f.file_field :avatar %>
</div>


  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
