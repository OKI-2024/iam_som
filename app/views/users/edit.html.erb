<%= render "shared/header" %>

<div class="sign-in-main">
    <h2>ユーザー情報変更</h2>
  <div class="sign-in-form">
    
    <div class="form-header">
      
    </div>


<%= form_with model: current_user, local: true do |f|%>


      <div class="field">
        <%= f.label :ニックネーム（最大10字） %><br />
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>
      
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :自己紹介（最大240字） %><br />
        <%= f.text_area :introduction, autocomplete: "introduction" %>
      </div>
      
      <div class="field">
        <%= f.label :アイコン %><br />
        <%= f.file_field :avatar %>
      </div>

      <div class="actions">
      <%= f.submit "変更を保存する", class: "custom-button" %>
      </div>

    <% end %>
  </div>  
</div>

<%= render "shared/footer" %>
